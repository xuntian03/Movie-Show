.header {
  text-align:center;
  font-size:40rpx;
  padding:30rpx;
}

.list {
  display:flex;
  flex:1;
  flex-direction:column;
}

.list-item {
  display:flex;
  border:1rpx solid #eee;
  padding:20rpx;
  cursor:pointer;
}

.list-item image {
  width:140rpx;
  height:180rpx;
}

.list-item .info {
  flex:1;
  color:#888;
  margin-left:20rpx;
}

.list-item .info text {
  display:block;
  margin:10rpx 0;
}

.list-item .info .title {
  font-size:40rpx;
  color:black;
}

.list-item .rating text {
  font-size:40rpx;
  color:red;
  font-weight:blod;
}